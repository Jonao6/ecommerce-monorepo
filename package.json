{
  "name": "ecommerce-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:api": "cd apps/api && pnpm dev",
    "dev:web": "cd apps/web && pnpm dev",
    "build": "pnpm build:api && pnpm build:web",
    "build:api": "cd apps/api && pnpm build",
    "build:web": "cd apps/web && pnpm build",
    "start": "pnpm -r start",
    "start:api": "cd apps/api && pnpm start",
    "start:web": "cd apps/web && pnpm start",
    "start:prod": "pnpm build && pnpm start",
    "db:migrate": "pnpm prisma:migrate",
    "db:seed": "pnpm prisma:seed",
    "prisma:generate": "cd apps/api && pnpm prisma:generate",
    "prisma:migrate": "cd apps/api && pnpm prisma:migrate dev",
    "prisma:seed": "cd apps/api && pnpm prisma:seed",
    "test": "pnpm test:api && pnpm test:web",
    "test:web": "cd apps/web && pnpm test",
    "test:coverage": "pnpm test:web --coverage",
    "lint": "pnpm lint:web",
    "lint:web": "cd apps/web && pnpm lint",
    "lint:fix": "pnpm lint:web --fix",
    "typecheck": "pnpm typecheck:api && pnpm typecheck:web",
    "typecheck:api": "cd apps/api && pnpm typecheck",
    "typecheck:web": "cd apps/web && pnpm typecheck",
    "clean": "rm -rf apps/api/dist apps/web/.next && pnpm clean:node_modules",
    "clean:node_modules": "rm -rf apps/api/node_modules apps/web/node_modules node_modules",
    "setup": "pnpm install && pnpm prisma:generate && pnpm db:migrate && pnpm db:seed"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "concurrently": "^8.2.2"
  }
}
